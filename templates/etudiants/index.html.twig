{% extends 'base.html.twig' %}

{% block title %}Etudiants{% endblock %}

{% block body %}

   {{ block("MenuTop", "Menus/MenuTop.html.twig") }}
   <div class="app-main">
    {{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}

    


 <div class="app-main__outer">
 
                <div class="app-main__inner">
                    <div class="app-page-title">
                        <div class="page-title-wrapper">
                            <div class="page-title-heading">
                                <div class="page-title-icon">
                                    <i class="lnr-users icon-gradient bg-strong-bliss"></i>
                                </div>
                                <div>Etudiants
                                    <div class="page-title-subheading">Gestion des étudiants</div>
                                </div>
                            </div>
                           <div class="page-title-actions">
                        
                            <div class="d-inline-block dropdown">
                            <a href="{{ path('app_etudiants_new') }}">
                                <button  class="btn-shadow btn btn-info">
                                    <span class="btn-icon-wrapper pr-2 opacity-7">
                                        <i class="fa fa-plus fa-w-20"></i>
                                    </span>
                                    Ajouter un étudiant
                                </button>
                               </a>
                            </div>
                        </div>
                        </div>
                    </div>
               
                    <div class="tabs-animation"> 
                     <div class="main-card mb-3 card">
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                        <thead>
                            <tr role="row">
   
                      
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Nom</th>
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Téléphone</th>
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Email</th>
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Date de création</th>
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Créé par</th>
                                <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">Actions</th>
              
            
                            </tr>
                        </thead>
                        <tbody>

                          {% for etudiant in etudiants %}
                                <tr role="row" class="odd">
                         
                                

                                    <td class="sorting_1 dtr-control">
                                    {{ etudiant.nom }}  {{ etudiant.prenom }}
                                    </td>

                                    <td class="sorting_1 dtr-control">
                                    {{ etudiant.telephone }}
                                    </td>

                                    <td class="sorting_1 dtr-control">
                                    {{ etudiant.email }}
                                    </td>

                                    <td class="sorting_1 dtr-control">

                                    {{ etudiant.createdAt|date('d-m-Y H:i') }}
                                    
                                    </td>

                                    <td class="sorting_1 dtr-control">
                                    
                                    {{ etudiant.createdBy }}
                                    
                                    </td>
                                    
                                    <td class="sorting_1 dtr-control">
                                    <a href="{{ path('app_etudiants_show', {'id': etudiant.id}) }}"><button class="mb-2 mr-2 btn-icon btn-icon btn-pill btn btn-link" style="color:#31a66a;" ><i class="lnr-eye btn-icon-wrapper"> </i>Voir</button></a>
                                        
                                        <a href="{{ path('app_etudiants_edit', {'id': etudiant.id}) }}"><button class="mb-2 mr-2 btn-icon btn-pill btn btn-link" ><i class="pe-7s-tools btn-icon-wrapper"> </i>Modifier</button></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr role="row" class="odd">
                                    <td class="sorting_1 dtr-control" colspan="6">no records found</td>
                                </tr>
                            {% endfor %}

                        </tbody>
                 
                    </table>
                </div>
            </div>
    
    
        </div>
    </div>
</div>
                    
         
                     
                    </div>
                </div>
   
    </div> 



{% endblock %}



