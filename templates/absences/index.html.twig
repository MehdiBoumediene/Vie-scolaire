{% extends 'base.html.twig' %}

{% block title %}Absences index{% endblock %}

{% block body %}
    <h1>Absences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Created_at</th>
                <th>Created_by</th>
                <th>Du</th>
                <th>Au</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for absence in absences %}
            <tr>
                <td>{{ absence.id }}</td>
                <td>{{ absence.date ? absence.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ absence.createdAt ? absence.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ absence.createdBy }}</td>
                <td>{{ absence.du ? absence.du|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ absence.au ? absence.au|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_absences_show', {'id': absence.id}) }}">show</a>
                    <a href="{{ path('app_absences_edit', {'id': absence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_absences_new') }}">Create new</a>
{% endblock %}
